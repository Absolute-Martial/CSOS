# AI Engineering Study Assistant - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# AI PROVIDER CONFIGURATION
# ============================================

# OpenAI (default)
AI_API_BASE_URL=https://api.openai.com/v1
AI_API_KEY=sk-your-openai-key-here
AI_MODEL_NAME=gpt-4

# For Ollama (local LLM):
# AI_API_BASE_URL=http://localhost:11434/v1
# AI_API_KEY=ollama
# AI_MODEL_NAME=llama3

# AI Parameters
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2048

# ============================================
# SCHEDULE CONFIGURATION
# ============================================

# Sleep schedule (24-hour format)
SLEEP_START_HOUR=23
SLEEP_START_MINUTE=0
SLEEP_DURATION_HOURS=7.0

# Peak productivity hours
CONCEPT_PEAK_START_HOUR=8
CONCEPT_PEAK_END_HOUR=12
PRACTICE_PEAK_START_HOUR=16
PRACTICE_PEAK_END_HOUR=20

# Deep work settings
MIN_DEEP_WORK_MINS=90
MAX_DAILY_DEEP_WORK_HOURS=6

# ============================================
# SUBJECT PRIORITIES (1-10)
# ============================================

SUBJECT_PRIORITY_MATH101=8
SUBJECT_PRIORITY_PHYS102=7
SUBJECT_PRIORITY_COMP101=9
SUBJECT_PRIORITY_CHEM101=6
SUBJECT_PRIORITY_ENG101=5

# ============================================
# C ENGINE CONFIGURATION
# ============================================

ENGINE_PATH=engine
SHARED_LIBRARY_NAME=scheduler_engine
OPTIMIZATION_TIMEOUT_MS=5000

# ============================================
# DATABASE CONFIGURATION
# ============================================

DATABASE_URL=postgresql://postgres:password@localhost:5432/personal_os

# ============================================
# API CONFIGURATION
# ============================================

API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# ============================================
# UI CONFIGURATION
# ============================================

STREAMLIT_PORT=8501
UI_THEME=dark
